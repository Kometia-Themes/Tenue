}

.footer-bottom .payment-methods img {
  display: inline;
  padding-left: 0px;
  height: 35px;
}

.footer-title {
  text-transform: uppercase;
  font-weight: 600;
  color: {{ settings.footer_title_color }};
}

.footer-menu,
.footer-social-icons {
  padding-left: 0;
}

.footer-menu li,
.footer-social-icons li {
  list-style-type: none;
}

.footer-menu li a,
.footer-social-icons li a {
  padding: 5px 0;
  color: {{ settings.footer_font_color }};
}

.footer-menu li a:hover,
.footer-social-icons li a:hover {
  color: {{ settings.footer_link_color_hover }};
}

.footer-menu li a i,
.footer-social-icons li a i {
  padding: 0 5px;
}

#newsletterForm {
  padding-bottom: 10px;
}

#newsletterForm .form-control {
  height: 45px;
  color: #9B9B9B;
  font-weight: 300;
  font-size: 12px;
  width: 100%;
  /* firefox 19+ */
  /* ie */
}

#newsletterForm .form-control::-webkit-input-placeholder {
  color: #9B9B9B;
  font-weight: 300;
  font-size: 12px;
}

#newsletterForm .form-control::-moz-placeholder {
  color: #9B9B9B;
  font-weight: 300;
  font-size: 12px;
}

#newsletterForm .form-control:-ms-input-placeholder {
  color: #9B9B9B;
  font-weight: 300;
  font-size: 12px;
}

#newsletterForm .form-controlinput:-moz-placeholder {
  color: #9B9B9B;
  font-weight: 300;
  font-size: 12px;
}

/* * * *  * * * */
/* Forms styles */
/* * * *  * * * */

.form-control {
  border-radius: 0;
}

.orderby-dropdown {
  background: none;
  border: 1px solid black;
  font-size: 12px;
  text-transform: uppercase;
  font-weight: 300;
  color: {{ settings.main_menu_link_color }};
  margin-bottom: 25px;
}

.bootstrap-select:not([class*=col-]):not([class*=form-control]):not(.input-group-btn) {
  width: 100%;
}

.bootstrap-select.btn-group .dropdown-toggle .filter-option {
  padding-left: 15px;
}

/* * * * * * * * * * * */
/* Login Forms styles  */
/* * * * * * * * * * * */

.login-form {
  padding-top: 50px;
  padding-bottom: 50px; 
}

.login-form .input-group {
  width: 100%; 
}

.login-form .input-group input[type='email'] {
  border-color: #cecece; 
}

.login-form .input-group .form-control {
  padding-top: 5px;
}

.login-form .input-group .form-control::-webkit-input-placeholder {
  color: #cecece;
  font-size: 14px;
  text-transform: uppercase; 
}

.login-form .input-group .form-control::-moz-placeholder {
  color: #cecece;
  font-size: 14px;
  text-transform: uppercase; 
}

.login-form .input-group .form-control:-ms-input-placeholder {
  color: #cecece;
  font-size: 14px;
  text-transform: uppercase;
}

.login-form .input-group .form-controlinput:-moz-placeholder {
  color: #cecece;
  font-size: 14px;
  text-transform: uppercase; 
}

.login-form .checkbox {
  color: #cecece;
  font-size: 14px; 
}

.login-form a {
  color: #cecece;
  font-size: 14px;
  text-align: center;
  display: block; 
}

.login-form a:hover {
  color: {{ settings.main_link_color_hover }};
}

/* * * *  * * * * * * */
/* Pagination styles  */
/* * * *  * * * * * * */

.pagination > .active > a,
.pagination > .active > a:focus,
.pagination > .active > a:hover,
.pagination > .active > span,
.pagination > .active > span:focus,
.pagination > .active > span:hover {
  background-color: {{ settings.main_link_color }};
  border-color: {{ settings.main_link_color }};
}

.pagination > li > a, .pagination > li > span {
  color: {{ settings.main_link_color }};
}

.pagination > li > a:focus,
.pagination > li > a:hover,
.pagination > li > span:focus,
.pagination > li > span:hover {
  color: white;
  border-color: {{ settings.body_font_color }};
  background-color: {{ settings.main_link_color_hover }};
}

.page-item.disabled {
  display: none;
}

.pagination > li > a,
.pagination > li > span {
  border-radius: 0 !important;
}

/* * * * * * * * */
/* Slider styles */
/* * * * * * * * */

.slick-slider-home {
  height: 500px;
  width: 100%;
}
@media (min-width: 768px) {
  .slick-slider-home {
    height: 550px;
  }
}

.slick-slider-home.slider-responsive {
  height: auto !important; 
}

.slick-slider-home.slider-responsive .slick-slide {
  height: auto; 
}

.slick-slider-home.slider-responsive .slick-slide img {
  width: 100%;
  height: auto; 
}

.slick-slider-home.slider-responsive .slider_content {
  position: absolute;
  width: 100%;
  height: 100%;
  margin-top: 0;
  top: 0;
  left: 15px; 
}

@media (max-width: 767px) {
  .slick-slider-home.slider-responsive .slider_content {
    padding-top: 0; 
  } 
}

@media (min-width: 768px) {
  .slick-slider-home.slider-responsive .slider_content {
    padding-top: 10%; 
  } 
}

@media (min-width: 992px) {
  .slick-slider-home.slider-responsive .slider_content {
    padding-top: 15%; 
  } 
}

@media (max-width: 767px) {
  .slick-slider-home.slider-responsive .slick-dots {
    bottom: 0;
  } 
}

.slick-slider-home .slick-slide {
  position: relative;
  height: 500px;
  background-position: center center;
  background-repeat: no-repeat;
}

@media (min-width: 768px) {
  .slick-slider-home .slick-slide {
    height: 550px;
    background-size: auto 100%;
  }
}

@media (min-width: 1200px) {
  .slick-slider-home .slick-slide {
    background-size: 100% auto;
  }
}

.slick-slider-home .slider_overlay {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}

.slick-slider-home .slider_content {
  position: relative;
  margin-top: 200px;
  z-index: 3;
}

@media (min-width: 768px) {
  .slick-slider-home .slider_content {
    margin-top: 250px;
  }
}

.slick-slider-home .slider_content .slider_title {
  color: white;
  font-size: 32px;
}

@media (max-width: 767px) {
  .slick-slider-home .slider_content .slider_title {
    padding: 0 15px;
  }
}

@media (min-width: 768px) {
  .slick-slider-home .slider_content .slider_title {
    font-size: 64px;
  }
}

.slick-slider-home .slider_content .slider_desc {
  color: white;
  font-weight: 300;
  padding: 15px 0;
}

@media (max-width: 767px) {
  .slick-slider-home .slider_content .slider_desc {
    padding: 0 15px;
    font-size: 14px;
  }
}

.slick-slider-home .slider_content .slide_btn {
  background: {{ settings.slide_btn_background }};
  height: 60px;
  padding: 20px 0;
  color: {{ settings.slide_btn_color }};
}

@media (max-width: 767px) {
  .slick-slider-home .slider_content .slide_btn {
    margin: 0 15px;
  }
}

@media (min-width: 768px) {
  .slick-slider-home .slick-dots {
    bottom: inherit;
    top: 50%;
    right: 15px;
    width: initial;
  }
}

@media (max-width: 767px) {
  .slick-slider-home .slick-dots {
    bottom: 15px;
  }
}

@media (min-width: 768px) {
  .slick-slider-home .slick-dots li {
    display: block;
  }
}

.slick-slider-home .slick-dots li.slick-active button:before {
  color: white;
  font-size: 10px;
}

.slick-slider-home .slick-dots li button:before {
  color: white;
}

.slider-nav {
  width: 90%;
  margin: 0 auto;
}

.slider-nav .slick-list, .slider-nav .slick-track {
  height: 100%; 
}

.slider-nav .product__images--nav {
  background: {{ settings.product_card_background_color }}; 
}

.slider-for {
  width: 100%;
  height: 450px;
  margin-bottom: 80px;
}

.slider-for .slick-list, .slider-for .slick-track {
  height: 100%; 
}

@media (min-width: 768px) {
  .slider-for {
    height: 620px;
    margin-bottom: 0;
  }
}

.slider-for .product__images--for {
  background: {{ settings.product_card_background_color }}; 
}

.slick-prev:before,
.slick-next:before {
  color: #979797;
}

.center-precontainer {
  display:table;
  width:100%;
  height:100%;
}

.center-container {
  display: table-cell;
  text-align: center;
  vertical-align: middle;
}

.placeholder {
  background-color: {{ settings.placeholder_background_color }};
  background-image: url('{{ 'placeholder.svg' | asset_url}}');
  background-repeat: no-repeat;
  background-position: center center;
  background-size: initial !important;
}

.product-card-placeholder {
  width: 100%;
  height: 480px;
}

.featured__product__grid .product-card-placeholder {
  height: 350px;
}

.blog-grid-item .placeholder {
  height: 200px;
}

.placeholder-hover {
  position: relative;
}

.placeholder-hover:hover .placeholder-helper {
  opacity: 1;
}

.placeholder-hover .placeholder-helper {
  opacity: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  top: 0;
  left: 0;
  z-index: 999;
  transition: all .3s;
}

.placeholder-hover .placeholder-helper .placeholder-info {
  width: 60%;
  margin: 0 auto;
  position: absolute;
  top: 50%;
  left: 50%;
  background: rgba(49, 55, 61, 0.9);
  padding: 25px;
}

.placeholder-hover .placeholder-helper .placeholder-info p {
  color: white;
}

.placeholder-hover .placeholder-helper .btn-placeholder {
  margin: 0 auto;
  width: 40%;
  display: block;
  margin-top: 25px;
}

