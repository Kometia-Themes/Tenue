}
.orderby-dropdown {
  background: none;
  border: 1px solid black;
  font-size: 12px;
  text-transform: uppercase;
  font-weight: 300;
  color: {{ settings.main_link_color }};
  margin-bottom: 25px;
}
.bootstrap-select:not([class*=col-]):not([class*=form-control]):not(.input-group-btn) {
  width: 100%;
}
.bootstrap-select.btn-group .dropdown-toggle .filter-option {
  padding-left: 15px;
}

/* * * * * * * * * * * */
/* Login Forms styles  */
/* * * * * * * * * * * */
.login-form {
  padding-top: 25px;
  padding-bottom: 25px;
}
.login-form .input-group {
  width: 100%;
}
.login-form .input-group input[type='email'] {
  border-color: {{ border }};
}
.login-form .input-group .form-control {
  border-color: {{ border }};
  padding-top: 5px;
}
.login-form .input-group .form-control::-webkit-input-placeholder {
  color: {{ border }};
  font-size: 14px;
  text-transform: uppercase;
}
.login-form .input-group .form-control::-moz-placeholder {
  color: {{ border }};
  font-size: 14px;
  text-transform: uppercase;
}
.login-form .input-group .form-control:-ms-input-placeholder {
  color: {{ border }};
  font-size: 14px;
  text-transform: uppercase;
}
.login-form .input-group .form-controlinput:-moz-placeholder {
  color: {{ border }};
  font-size: 14px;
  text-transform: uppercase;
}
.login-form .checkbox {
  color: {{ border }};
  font-size: 14px;
}
.login-form a {
  color: {{ border }};
  font-size: 14px;
  text-align: center;
  display: block;
}
.login-form a:hover {
  color: {{ settings.main_link_color_hover }};
}

/* * * *  * * * * * * */
/* Pagination styles  */
/* * * *  * * * * * * */
.pagination > .active > a,
.pagination > .active > a:focus,
.pagination > .active > a:hover,
.pagination > .active > span,
.pagination > .active > span:focus,
.pagination > .active > span:hover {
  background-color: {{ settings.main_link_color }};
  border-color: {{ settings.main_link_color }};
}
.pagination > li > a, .pagination > li > span {
  color: {{ settings.main_link_color }};
}
.pagination > li > a:focus,
.pagination > li > a:hover,
.pagination > li > span:focus,
.pagination > li > span:hover {
  color: white;
  border-color: {{ settings.body_font_color }};
  background-color: {{ settings.main_link_color_hover }};
}
.page-item.disabled {
  display: none;
}
.pagination > li > a,
.pagination > li > span {
  border-radius: 0 !important;
}

/* * * * * * * * */
/* Slider styles */
/* * * * * * * * */
.slick-slider-home {
  margin-bottom: 50px;
}
.slick-dotted.slick-slider {
  margin-bottom: 50px;
}
.slick-slider-home .slick-slide {
  position: relative;
  height: 500px;
  background-position: center center;
  background-repeat: no-repeat;
}
.slick-slide img {
  display: block;
  max-width: 100%;
  height: auto;
  max-height: 100%;
  margin: 0 auto;
}
.slick-slider-home .slider_overlay {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}
.slick-slider-home .slider_content {
  position: relative;
  margin-top: 200px;
  z-index: 3;
}
.slick-slider-home .slider_content .slider_title {
  color: white;
  text-shadow: 2px 2px 8px rgba(100, 100, 100, 0.8);
  font-size: 32px;
}
.slick-slider-home .slider_content .slider_desc {
  color: white;
  font-size: 20px;
  font-weight: 300;
  padding: .5em 0;
}

.legibility {
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
  background-color: rgba(0,0,0,.3);
  padding: .6em;
  line-height: 3.4;
}
.slick-slider-home .slider_content .slide_btn {
  background: {{ settings.btn_background_color }};
  height: 160px;
  padding: 20px 0;
  color: {{ settings.btn_text_color }};
}
.slick-slider-home .slider_content .slide_btn:hover {
  background: {{ settings.btn_background_color_hover }};
  color: {{ settings.btn_color_text_hover }};
}
.slick-slider-home .slick-dots li.slick-active button:before {
  color: white;
  font-size: 10px;
}
.slick-slider-home .slick-dots li button:before {
  color: white;
}
.slider-nav {
  width: 90%;
  margin: 0 auto;
}
.slider-nav .slick-list, .slider-nav .slick-track {
  height: 100%;
}
.slider-nav .product__images--nav {
  background: {{ settings.product_card_background_color }};
  cursor: pointer;
}
.slider-for {
  width: 100%;
  margin-bottom: 40px;
}
.slider-for .slick-list, .slider-for .slick-track {
  height: 100%;
}
.slider-for .product__images--for {
  background: {{ settings.product_card_background_color }};
}
.slick-prev:before,
.slick-next:before {
  color: #979797;
}
.center-precontainer {
  display:table;
  width:100%;
  height:100%;
}
.center-container {
  display: table-cell;
  text-align: center;
  vertical-align: middle;
}
.placeholder {
  background-color: {{ settings.placeholder_background_color }};
  background-image: url('{{ 'placeholders/product-11.jpg' | global_img_url }}');
  background-repeat: no-repeat;
  background-position: center center;
  background-size: initial;
}
.product-card-placeholder {
  width: 100%;
  height: 480px;
}
.featured__product__grid .product-card-placeholder {
  height: 350px;
}
.blog-grid-item .placeholder {
  height: 200px;
}
.placeholder-hover {
  position: relative;
}
.placeholder-hover:hover .placeholder-helper {
  opacity: 1;
  filter: alpha(opacity=100);
}
.placeholder-hover .placeholder-helper {
  opacity: 0;
  filter: alpha(opacity=0);
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.2);
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  transition: all .3s;
}
.placeholder-hover .placeholder-helper .placeholder-info {
  width: 50%;
  margin: auto;
  position: absolute;
  top: 25%;
  left: 25%;
  background: rgba(49, 55, 61, 0.9);
  padding: 2em;
}
.placeholder-hover .placeholder-helper .placeholder-info p {
  color: white;
}
.placeholder-hover .placeholder-helper .btn-placeholder {
  margin: 0 auto;
  width: auto;
  height: auto;
  padding:1em;
  display: inline-block;
  margin: 2em .5em 0;
}

/* * * * * * * * */
/* Mediaqueries  */
/* * * * * * * * */
@media (max-width: 767px) {
  .slick-slider-home .slider_content .slider_title {
    padding: 0 15px;
  }
  .legibility {
    line-height: 2.6;
  }
  .slick-slider-home .slider_content .slider_desc {
    padding: 0 15px 25px;
    font-size: 16px;
  }
  .slick-slider-home .slider_content a.btn.btn-block {
    width: 100%;
    height: auto;
    padding: 1.2em;
    display: inline-block;
    font-size: 1.1em;
  }
  .slick-slider-home .slider_content .slide_btn {
    margin: 0 15px;
  }
  .slick-slider-home .slick-dots {
    bottom: 15px;
  }
  .product-card-placeholder {height: 12em;}
  .placeholder-hover .placeholder-helper .placeholder-info {
    width: 90%;
    max-width: 90%;
    padding: 2em;
    position: absolute;
    top: 25%;
    left: 5%;
    bottom: 25%;
    right: 5%;
  }
}
@media (min-width: 768px) {
  .slick-slider-home .slick-slide {
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }
  .slick-slider-home .slider_content {
    margin-top: 250px;
  }
  .slick-slider-home .slider_content .slider_title {
    font-size: 54px;
    line-height: 1.2;
    margin-bottom: 0;
    margin-top: 0;
  }
  .slick-slider-home .slider_content a.btn.btn-block {
    width: auto;
    height: auto;
    padding: 1em;
    display: inline-block;
    font-size: 1em;
  }
  .slick-slider-home .slick-dots {
    bottom: inherit;
    top: 50%;
    right: 15px;
    width: initial;
  }
  .slick-slider-home .slick-dots li {
    display: block;
  }
  .slider-for {
    margin-bottom: 2em;
  }
  .product-card-placeholder {height: 15em;}
}
@media (min-width: 1200px) {
  .slick-slider-home .slick-slide {
    background-size: 100% auto;
    background-position: top center;
  }
  .product-card-placeholder {height: 18em;}
}

/* * * * * * * * */
/* Banner styles */
/* * * * * * * * */
.main-banner {
  background-color: #efefef;
  background-repeat: no-repeat;
  background-position: center center;
  position: relative;
  margin-bottom: 50px;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

}
.main-banner__info .main_banner_title {
  text-transform: uppercase;
}
.main-banner__info .main_banner_desc {
  text-transform: uppercase;
  color: {{ settings.headings_color }};
}
.main-banner__overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.2);
}

/* * * * * * * * */
/* Mediaqueries  */
/* * * * * * * * */
@media (max-width: 767px) {
  .main-banner__info {
    padding: 60px 15px;
  }
}
@media (min-width: 768px) {
  .main-banner__info {
    padding: 120px 50px;
  }
}
@media (min-width: 768px) {
  .main-banner__info .main_banner_desc {
    font-size: 60px;
  }
}

/* * * * * * * * * */
/* Sidebar styles  */
/* * * * * * * * * */
.sidebar__section {
  padding: 15px 0;
  border-top: 1px solid #9b9b9b;
}
.sidebar__section.sidebar__section--first {
  padding-top: 0;
  border-top: none;
}
.sidebar__section__title {
  text-transform: uppercase;
  margin-bottom: 15px;
  margin-top: 0;
}
.sidebar__section__item {
  padding: 0;
}
ul.category li a {
  font-size: .9em;
  color: {{ settings.main_link_color }};
}
ul.category li a.active {
  font-weight: bold;
}
ul.category li a:hover {
  color: {{ settings.main_link_color_hover }};
}
ul.category:first-child {
    padding-left:0;
}
ul.category:not(:first-child) {
    padding-left:18px;
}
label {
   text-transform: uppercase;
   font-weight: 600;
   color: #1b1b1b;
}
.sidebar__section__item label {
  font-size: 12px;
  font-weight: 300;
}

/* * * * * * * * * */
/* Featured styles */
/* * * * * * * * * */
.featured__product__grid {
  margin-bottom: 25px;
}

/* * * * * * * * * * */
/* Collection styles */
/* * * * * * * * * * */
.collection__header {
  width: 100%;
  height: 500px;
  padding-top: 250px;
  background-repeat: no-repeat;
  background-position: center center;
  position: relative;
  margin-top: 0;
  margin-bottom: 50px;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
.collection__header__overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  top: 0;
  left: 0;
}
.collection__header__info__title {
  text-transform: uppercase;
  color: {{ settings.header_collections_title_color }} !important;
}
.collection__header__info__desc,
.collection__header__info__desc p {
  color: {{ settings.header_collection_desc_color }} !important;
}
.collection__sort {
  margin-bottom: 25px;
}
.collection__item {
  width: 100%;
  position: relative;
  background-repeat: no-repeat;
  background-position: center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
.collection__item--no_image,
.product-card__no-image {
  background-color: {{ settings.placeholder_background_color }};
}
.collection__item--no_image {
  background-image: url('{{ 'placeholders/product-11.jpg' | global_img_url }}');
  background-size: 150px;
}
.collection__item--with_image {
  background-color: rgba(255,255,255,1);
  background-position: center center;
  background-size: cover;
}
.collection__item--with_image_rectangle {
  background-color: rgba(255,255,255,1);
  height: 10.2em;
  background-position: top;
  background-color: {{ settings.placeholder_background_color }};
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
.product-card__no-image {
  background-color: rgba(200,200,200,.2);
}
.collection__item .collection__item__overlay {
  position: absolute;
  display: table;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
  opacity: 0;
  filter: alpha(opacity=0);
  transition: all .3s;
  width: 100%;
  height: 100%;
}
.item__overlay--empty {
  opacity: 1 !important;
  filter: alpha(opacity=100);
  background-color: {{ settings.placeholder_background_color }} !important;
}
.collection__item .collection__item__overlay .collection__item__title {
  display: table-cell;
  vertical-align: middle;
  text-transform: uppercase;
  text-align: center;
  color: white;
  padding: 0 15px;
}
.collection__item:hover .collection__item__overlay {
  opacity: 1;
  filter: alpha(opacity=100);
}
.collection__layout__all-items .collection__item {
  margin-top: 25px;
}
.collection__grid, .featured__product__grid {
  margin-bottom: 20px;
  padding-bottom: 1em;
}

/* * * * * * * * */
/* Mediaqueries  */
/* * * * * * * * */
@media (max-width: 767px) {
  .collection__header {
    height: 340px;
    padding-top: 40px;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }
  .collection__header__info__title {
    padding: 0 15px;
  }
  .collection__header__info__desc {
    padding: 0 15px;
  }
  .collection__item {
    margin-bottom: 25px;
  }
  .collection__item .collection__item__overlay {
    opacity: 1;
    filter: alpha(opacity=100);
  }
}
@media (min-width: 768px) {
  .bottom-row .collection__item--rectangle {
    margin-top: 30px;
  }
}

/* * * * * * * * */
/* Blog styles   */
/* * * * * * * * */
.front__blog__grid {
  margin-bottom: 50px;
}
.blog-grid-item__title {
  font-size: 18px;
  font-weight: 600;
}
.blog-grid-item__summary {
  font-size: 14px;
  font-weight: 300;
}
.blog-read-more {
  font-size: 14px;
}
.post__header {
  height: 500px;
  background-repeat: no-repeat;
  background-position: center center;
  position: relative;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
.post__header__overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
}
.post__header__title {
  color: white;
  text-align: center;
  font-size: 48px;
}
.post__header__summary {
  color: white;
  text-align: center;
  font-weight: 300;
  padding-top: 15px;
}
.post__content {
  padding-top: 50px;
  padding-bottom: 50px;
  line-height: 1.6;
}
.post__content h1,
.post__content h2,
.post__content h3,
.post__content h4,
.post__content h5 {
  position: relative;
  padding-bottom: 15px;
}
.blog {
  margin-bottom: 80px;
}
.blog__item__img {
  min-height: 60px;
  z-index: 5;
}
.blog__item__info {
  background: white;
  border: 1px solid #e7e7e7;
  padding: 35px 30px 25px 30px;
  margin-top: -40px;
  z-index: 10;
}
.blog__item__info h2.section-heading {
  margin-top: 0;
}
.blog__item__img__link {
  display: block;
  min-height: 50px;
}
.blog__item__no_img__link {
  margin: 0 auto;
  background-color: #f4f4f4;
  height: 167px;
  width: 167px;
}
.grid-item__thumb-image {
  background-color: #FFFFFF;
  width: 100%;
  background-size: cover;
  display: block;
  margin-bottom: 25px;
}
.grid-item__thumb-no-image {
  width: 100%;
  background: #f4f4f4 url('{{ 'placeholders/product-11.jpg' | global_img_url }}') no-repeat center center;
  background-size: contain;
  display: block;
  margin-bottom: 25px;
}
.blog__item__img__link img {
  width: 100%;
  height: auto;
  max-height: 500px;
}
.blog__pagination {
  margin-top: 50px;
}

/* * * * * * * * */
/* Mediaqueries  */
/* * * * * * * * */
@media (max-width: 767px) {
  .blog-grid-item {
    margin-bottom: 25px;
  }
  .post__header {
    background-size: auto 100%;
    margin-top: 0;
  }
  .post__header__title {
    font-size: 36px;
  }
  .blog__item__img__link {
    min-height: 40px;
  }
}
@media (min-width: 1200px) {
  .blog__item__img__link {
    min-height: 40px;
  }
}

/* * * * * * * * */
/* Cart styles   */
/* * * * * * * * */
.cart {
  margin-top: 25px;
}
.cart__grid__heading {
  border-bottom: 1px solid {{ border }};
  padding-bottom: 10px;
}
.cart__grid__heading h5 {
  text-transform: uppercase;
  color: {{ settings.body_font_color}};
}
.cart-item {
  padding: 15px 0;
  border-bottom: 1px solid {{ border }};
}
.cart-item .media-left {
  padding-right: 25px;
}
.cart-item .media-left img {
  width: 100px;
  height: auto;
}
.cart-item .media-heading a {
  color: {{ settings.headings_color }};
}
.cart-item .media-heading a:hover {
  color: {{ settings.main_link_color }};
}
.empty-cart {
  padding: 25px 0 350px 0;
}
.item__price {
  color: {{ settings.headings_color }};
}
.item__variant {
  display: inline-block;
  text-transform: uppercase;
  padding-right: 25px;
  font-size: 14px;
}
.item__variant .item__variant__desc {
  text-transform: none;
  padding-left: 15px;
  color: {{ settings.headings_color }};
}
.item__delete, .item_refresh {
  background: none;
  color: {{ settings.headings_color }};
  font-size: 14px;
}
.item__delete:hover, .item_refresh:hover {
  color: {{ settings.brand_main_color }};
  background: none;
}
.cart__payment__info {
  margin-top: 25px;
  margin-bottom: 25px;
}
.cart__payment__cont {
  font-weight: 300;
}
.btn_cart {
  margin-bottom: 50px;
}

/* * * * * * * * */
/* Mediaqueries  */
/* * * * * * * * */
@media (max-width: 767px) {
  .cart-item {
    padding: 25px 0;
    border-bottom: 1px dotted {{ border }};
  }
  .item__delete, .item_refresh {
    font-size: 18px;
  }
}
@media (min-width: 768px) {
  .item_refresh {
    margin-left: 15px;
  }
}

