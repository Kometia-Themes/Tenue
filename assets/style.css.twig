.blog__item__info {
  background: white;
  border: 1px solid #e7e7e7;
  padding: 35px 30px 25px 30px;
  z-index: 10;
}

.blog__item__img__link {
  display: block;
}

.blog__item__img__link img {
  width: 100%;
  height: auto;
  max-height: 500px;
}

.blog__pagination {
  margin-top: 50px;
}

/* * * * * * * */
/* Page styles */
/* * * * * * * */

.page__content {
  padding-top: 50px;
  padding-bottom: 50px;
}

.page__content h1,
.page__content h2,
.page__content h3,
.page__content h4,
.page__content h5 {
  position: relative;
  padding-bottom: 15px;
}

.page__content h1:before,
.page__content h2:before,
.page__content h3:before,
.page__content h4:before,
.page__content h5:before {
  content: '';
  width: 50px;
  height: 2px;
  background: {{ settings.brand_main_color }};
  position: absolute;
  top: 100%;
  left: 0;
}

/* * * * * * * * */
/* Cart styles   */
/* * * * * * * * */

.cart {
  margin-top: 25px;
}

.cart__grid__heading {
  margin-top: 25px;
  border-bottom: 1px solid {{ settings.body_font_color }};
  padding-bottom: 10px;
}

.cart__grid__heading h5 {
  text-transform: uppercase;
  color: {{ settings.body_font_color}};
}

.cart-item {
  padding: 15px 0;
  border-bottom: 1px solid {{ settings.body_font_color }};
}

@media (max-width: 767px) {
  .cart-item {
    padding: 25px 0;
    border-bottom: 1px dotted {{ settings.body_font_color }};
  }
}

.cart-item .media-left {
  padding-right: 25px;
}

.cart-item .media-left img {
  width: 100px;
  height: auto;
}

.cart-item .media-heading a {
  color: {{ settings.headings_color }};
}

.cart-item .media-heading a:hover {
  color: {{ settings.main_link_color }};
}

.empty-cart {
  padding: 25px 0 350px 0;
}

.item__price {
  color: {{ settings.headings_color }};
}

.item__variant {
  display: inline-block;
  text-transform: uppercase;
  padding-right: 25px;
  font-size: 14px;
}

.item__variant .item__variant__desc {
  text-transform: none;
  padding-left: 15px;
  color: {{ settings.headings_color }};
}

.item__delete, .item_refresh {
  background: none;
  color: {{ settings.headings_color }};
  font-size: 14px;
}

@media (max-width: 767px) {
  .item__delete, .item_refresh {
    font-size: 18px;
  }
}

.item__delete:hover, .item_refresh:hover {
  color: {{ settings.brand_main_color }};
  background: none;
}

@media (min-width: 768px) {
  .item_refresh {
    margin-left: 15px;
  }
}

.cart__payment__info {
  margin-top: 25px;
  margin-bottom: 25px;
}

.cart__payment__cont {
  font-weight: 300;
  margin-top: 5px;
  margin-bottom: 5px;
}

.btn_cart {
  margin-bottom: 50px;
}

/* * * * *  * * * */
/* Product styles */
/* * * * *  * * * */

.product-card {
  margin-bottom: 25px;
  overflow: hidden;
}

.product-card .product-card__title {
  text-align: center;
  color: {{ settings.body_font_color }};
}

.product-card .product-card__price {
  text-align: center;
  color: #1b1b1b;
}

.product-card .compared-price {
  padding-left: 15px;
  text-decoration: line-through;
  font-size: 14px;
  color: {{ settings.product_compared_price_color }};
}

.product-card .product-card__image-container {
  height: 320px;
  background-color: {{ settings.product_card_background_color }};
}

.product-card .product-card__thumb-link {
  position: relative;
  width: 100%;
  display: block;
}

.product-card .product-card__background {
  background-repeat: no-repeat;
  background-position: center;
}

.product-card .product-card__thumb-link img.product-card__image {
  width: 100%;
  height: auto;
}

.product-card .product-card__thumb-link .product-card__view-more {
  display: none;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 50px;
  width: 100%;
  padding: 8px 0;
  background: rgba(0, 0, 0, 0.7);
}

.product-card .product-card__thumb-link .product-card__view-more h5 {
  color: white;
  text-transform: uppercase;
  text-align: center;
  font-size: 14px;
}

.product-card .product-card__thumb-link:hover .product-card__view-more {
  display: block;
}

.related__products__grid {
  margin-top: 25px;
  margin-bottom: 25px;
}

.product {
  margin-top: 50px;
  margin-bottom: 100px;
}

.product__vendor {
  margin: 0;
  padding: 0;
  margin-bottom: 5px;
  font-size: 12px;
  text-transform: uppercase;
}

.product__vendor__name {
  color: {{ settings.headings_color }};
}

.product__title {
  margin-top: 0;
}

.product__description {
  font-size: 14px;
  margin-top: 25px;
  margin-bottom: 50px;
}

.product__heading {
  text-transform: uppercase;
  color: #9B9B9B;
  margin-bottom: 0;
}

.product__price {
  font-size: 30px;
  color: {{ settings.headings_color }};
  margin-bottom: 25px;
}

.product__price .compared-price {
  padding-left: 15px;
  text-decoration: line-through;
  font-size: 18px;
  color: {{ settings.product_compared_price_color }};
}

.product_selection .product__heading {
  margin-bottom: 15px;
}

.product__vars {
  margin-bottom: 25px;
}

.product__btn {
  padding-top: 25px;
}

.product__images--for {
  width: 100%;
  height: 100%;
  text-align: center;
}

.product__images--for img {
  display: inline-block;
  width: 100%;
  height: auto;
}

.product__images--nav {
  padding: 0 2px;
  height: 152px;
  overflow: hidden;
}

.products__title {
  margin-top: 25px;
}

.products__grid {
  margin-top: 25px;
  margin-bottom: 50px;
}
