/* * * * * * * * */
/* Blog styles   */
/* * * * * * * * */

.front__blog__grid {
  margin-top: 25px;
  margin-bottom: 50px;
}

.blog-grid-item__title {
  font-weight: 600;
}

.blog-grid-item__summary {
  font-size: 14px;
  font-weight: 300;
}

.blog-read-more {
  font-size: 14px;
}

@media (max-width: 767px) {
  .blog-grid-item {
    margin-bottom: 25px;
