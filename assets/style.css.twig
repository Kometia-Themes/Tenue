  font-size: 14px;
}

.footer p {
  line-height: 1.5;
}

.footer .newsletter-content {
  font-size: 11px;
}

.footer .newsletter-down {
  text-decoration: underline;
  font-size: 11px;
  color: {{ settings.footer_link_color_hover }};
}

.footer-top {
  padding: 25px 0;
}

.footer-top .form-inline .row {
  border-top: none;
}

.footer-top .form-inline .row .form-group {
  width: 100%;
}

.footer-bottom {
  padding: 10px 0;
}

.footer-bottom .copyright {
  font-size: 12px;
  color: {{ settings.footer_font_color }};
}

.footer-bottom .payment-methods a {
