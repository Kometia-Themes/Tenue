/* * * * * * * */
/* Global Vars */
/* * * * * * * */
{% set border = settings.shop_bg_color | darken_color %}

/* * * * * * * * * */
/* Element styles  */
/* * * * * * * * * */
body {
  color: {{ settings.body_font_color }};
  font-size: {{ settings.body_font_size }};
  line-height: 1.6;
  background-color: {{ settings.shop_bg_color }};
  font-family: {{ settings.base_font | remove('Google+') | replace({'+': ' '}) }};
}

hr { border-color: {{ border }}; }

a,
a:visited {
  color: {{ settings.main_link_color }};
  transition: all .3s;
}

a:hover,
a:active {
  color: {{ settings.main_link_color_hover }};
  text-decoration: none;
}

.dropdown-menu > li > a {
  padding: 6px 27px;
}

button,
input[type='submit'] {
  background: {{ settings.btn_background_color }};
  color: {{ settings.btn_text_color }};
  border: none;
}

.btn.focus, .btn:focus, .btn:hover {
  color: {{ settings.btn_background_color | contrast_color }}
}

input[type='text'],
input[type='email'],
input[type='tel'],
input[type='url'],
input[type='date'],
input[type='time'],
input[type='month'],
input[type='datetime'],
input[type='datetime-local'],
input[type='color'],
input[type='range'],
input[type='number'],
input[type='search'] {
  border: 1px solid {{ border }};
}

h1,
h2,
h3,
h4,
h5,
h6 {
  color: {{ settings.headings_color }};
  line-height: 1.4;
  font-family: {{ settings.header_font | remove('Google+') | replace({'+': ' '}) }};
  font-weight: 400;
  margin-bottom: 1em;
}

h1 { font-size: {{ settings.header_font_size }}}
h1.section-title { margin-top: 0; }


/* * * * * * * * */
/* Global styles */
/* * * * * * * * */

a:active, a:focus {
  outline: none;
}
:focus {
  outline: none !important;
}
::-moz-focus-inner {
  border: 0 !important;
}

a.btn,
.btn {
  -webkit-border-radius:0;
  -moz-border-radius:0;
  border-radius:0;
  font-weight: 300;
  padding: 1em;
  font-size: 14px;
  letter-spacing: 1px;
  text-transform: uppercase;
  background: {{ settings.btn_background_color }};
  color: {{ settings.btn_text_color }};
}

.btn-sm {
  padding: .6em !important;
  font-size: 12px !important;
}

a:hover.btn,
.btn:hover {
  background: {{ settings.btn_background_color_hover }};
  color: {{ settings.btn_color_text_hover }};
}

.btn-outline {
  background: none !important;
  border: 1px solid {{ settings.btn_background_color }};
  background: {{ settings.btn_background_color }} !important;
  color: {{ settings.btn_text_color }} !important;
}

.btn-default, .btn-select, .btn-select:hover  {
  background: {{ settings.btn_background_color }};
  border: 1px solid {{ settings.body_font_color }};
}

/* * * * * * * * */
/* Share Buttons */
/* * * * * * * * */

.social-sharing {
  margin-bottom: 25px;
}
.social-sharing a {
  margin-bottom: .3em;
}

a.btn.btn-share.share-facebook {
  background-color: #3b5998;
}

a.btn.btn-share.share-facebook:hover {
  background-color: #2d4373;
}

a.btn.btn-share.share-twitter {
  background-color: #00aced;
}

a.btn.btn-share.share-twitter:hover {
  background-color: #0087ba;
}

a.btn.btn-share.share-pinterest {
  background-color: #cb2027;
}

a.btn.btn-share.share-pinterest:hover {
  background-color: #9f191f;
}

a.btn.btn-share.share-google {
  background-color: #dd4b39;
}

a.btn.btn-share.share-google:hover {
  background-color: #c23321;
}

.bootstrap-select>.dropdown-toggle.bs-placeholder:focus, .bootstrap-select>.dropdown-toggle.bs-placeholder:hover {
  background: transparent !important;
}

.bootstrap-select>.dropdown-toggle.bs-placeholder, .bootstrap-select>.dropdown-toggle.bs-placeholder:active, .bootstrap-select>.dropdown-toggle.bs-placeholder:focus, .bootstrap-select>.dropdown-toggle.bs-placeholder:hover {
  background: transparent !important;
}


/* * * * * */
/* Helpers */
/* * * * * */
.no-gut {
  padding-right: 0;
  padding-left: 0;
}
.margin-top {
  margin-top: 2.4em;
}
.super-margin-top {
  margin-top: 100px;
}
.not-found {
  font-size: 6em;
}
.section-heading {
  position: relative;
  margin-top: 0;
}
.clear-both {
  clear: both;
}
/* * * * * * * * */
/* Mediaqueries  */
/* * * * * * * * */
@media (max-width: 767px) {
  .super-margin-top {
    margin-top: 3em;
    padding-bottom: 3em;
  }
  .not-found {
    font-size: 8em;
  }
}
@media (min-width: 768px) {
  .super-margin-top {
    margin-top: 5em;
    padding-bottom: 5em;
  }
  .not-found {
    font-size: 10em;
  }
}
@media (min-width: 1200px) {
  .super-margin-top {
    margin-top: 6em;
    padding-bottom: 6em;
  }
  .not-found {
    font-size: 11em;
  }
}

/* * * * * * * * * * */
/* Main menu styles  */
/* * * * * * * * * * */
#main-menu {
  font-family: {{ settings.header_font | remove('Google+') | replace({'+': ' '}) }};
  background-color: rgba(255,255,255,.9);
  border-color: {{ border }};
