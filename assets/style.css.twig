/* * * * * * * * */
/* Footer styles */
/* * * * * * * * */
.footer {
  background-color: {{ settings.footer_bg_color }};
  border-top: 1px solid {{ border }};
  margin-top: 25px;
  padding: 50px 0;
}
.footer a,
.footer p {
  font-weight: 300;
  font-size: 14px;
}
.footer p {
  line-height: 1.5;
}
.footer .newsletter-content {
  font-size: 11px;
}
.footer .newsletter-down {
  text-decoration: underline;
  font-size: 11px;
  color: {{ settings.main_link_color_hover }};
}
.footer-top {
  padding: 25px 0;
}
.footer-bottom {
  border-top: 1px solid {{ border }};
  padding-top: 25px;
  margin-top: 25px;
}
.copyright {
  padding-top: 5px;
}
.footer-bottom .copyright {
  font-size: 12px;
