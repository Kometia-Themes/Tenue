}
@media (min-width: 767px) {
  #main-menu {
    z-index: 999;
  }
}
#main-menu .brand-logo {
  max-width: {{ settings.brand_logo_width }};
  height: auto;
}
#main-menu .navbar-brand {
  height: 60px;
  line-height: 26px;
}
#main-menu .brand-text {
  color: {{ settings.main_link_color }};
  display: inline-block;
}
#main-menu ul li a {
  color: {{ settings.main_link_color }};
  text-transform: uppercase;
}
#main-menu ul li a:hover {
  color: {{ settings.main_link_color_hover }};
}
#main-menu .navbar-left > li > a {
  font-size: 13px;
  padding: 20px 8px;
  letter-spacing: 1px;
}
#main-menu .navbar-right > li > a {
  font-size: 13px;
  padding: 20px 6px;
  letter-spacing: 1px;
}
#main-menu .navbar-right > li > a > i {
  font-size: 16px;
}
#main-menu .navbar-left li a:hover {
  opacity: 0.9;
  filter: alpha(opacity=90);
}
#main-menu .cart-notification {
  color: {{ settings.brand_main_color }};
}
#main-menu .dropdown-menu {
  border-radius: 0;
}
#main-menu .dropdown-menu > li > a {
  font-size: 12px;
}
.navbar-default .navbar-toggle:focus, .navbar-default .navbar-toggle:hover {
  background-color: transparent !important;
}
.navbar-default .navbar-toggle .icon-bar {
  background-color: {{ settings.brand_main_color }};
}
.cart-item__image-container {
  width: 100px;
  height: 130px;
}
#main-menu .search-dropdown .dropdown-menu {
  width: 300px;
  padding: 5px;
}
#main-menu .search-dropdown .dropdown-menu form .form-group, #main-menu .search-dropdown .dropdown-menu form .input-group {
  width: 100%;
}
#main-menu .search-dropdown .dropdown-menu form button {
  padding: 0 15px;
  height: 46px;
  border: 1px solid black;
  background: {{ settings.btn_background_color }} !important;
}
.navbar {
  margin-bottom: 0;
  border-radius: 0 !important;
  border: none;
  border-bottom: 1px solid;
}
.dropdown-submenu {
  position: relative;
}
.dropdown-submenu > .dropdown-menu {
  top: 0;
  left: 100%;
  margin-top: -6px;
  margin-left: -1px;
  -webkit-border-radius: 0 6px 6px 6px;
  -moz-border-radius: 0 6px 6px;
  border-radius: 0 6px 6px 6px;
}
.dropdown-submenu.active>.dropdown-menu {
  display: block;
}
.dropdown-submenu.active>a:after {
  border-left-color: #fff;
}
.dropdown-submenu>a:after {
  display: block;
  content: " ";
  float: right;
  width: 0;
  height: 0;
  border-color: transparent;
  border-style: solid;
  border-width: 5px 0 5px 5px;
  border-left-color: #ccc;
  margin-top: 5px;
  margin-right: -10px;
}
.dropdown-submenu:hover>a:after {
  border-left-color: #fff;
}
.dropdown-submenu.pull-left {
  float: none;
}
.dropdown-submenu.pull-left>.dropdown-menu {
  left: -100%;
  margin-left: 10px;
  -webkit-border-radius: 6px 0 6px 6px;
  -moz-border-radius: 6px 0 6px 6px;
  border-radius: 6px 0 6px 6px;
}
.banner-message {
  color: {{ settings.banner_message_text_color }};
  background-color: {{ settings.banner_message_bg_color }};
  font-family: {{ settings.header_font | remove('Google+') | replace({'+': ' '}) }};
  line-height: 30px;
  font-size: 12px;
  text-align: center;
  letter-spacing: 1px;
}
.banner-message a {
  color: {{ settings.banner_message_text_color }};
}
.banner-message a:hover {
  text-decoration: none;
  color: {{ settings.banner_message_text_color | darken_color }};
}

/* * * * * * * * */
/* Mediaqueries  */
/* * * * * * * * */
@media (max-width: 767px) {
  #main-menu .navbar-left > li > a {
    padding: 14px 14px;
  }
  #main-menu .navbar-right > li > a {
    padding: 14px 8px;
  }
}
@media (min-width: 1200px) {
    #main-menu .navbar-left > li > a {
    padding: 20px 14px;
  }
  #main-menu .navbar-right > li > a {
    padding: 20px 10px;
  }
}
@media (max-width: 767px) {
  #main-menu .search-dropdown .dropdown-menu {
    width: 100%;
  }
}
@media (max-width: 767px) {
  #main-menu-collapse {
    background-color: white;
    position: relative;
    z-index: 5;
    border-bottom: 1px solid {{ border }};
  }
