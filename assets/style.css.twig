}
.newsletter-form .form-control::-webkit-input-placeholder {
  color: #9B9B9B;
  font-weight: 300;
  font-size: 12px;
}
.newsletter-form .form-control::-moz-placeholder {
  color: #9B9B9B;
  font-weight: 300;
