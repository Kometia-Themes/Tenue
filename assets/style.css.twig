/* * * * * * * * * */
/* Element styles  */
/* * * * * * * * * */

body {
  color: {{ settings.body_font_color }};
  font-size: {{ settings.body_font_size }};
  background-color: {{ settings.shop_bg_color }};
  font-family: {{ settings.base_font }};
}

hr {
  border-color: #ddd;
}

a,
a:visited {
  color: {{ settings.main_link_color }};
  color: #2196F3;
  transition: all .3s;
}

a:hover,
a:active {
  color: {{ settings.main_link_color_hover }};
  text-decoration: none;
}

p {
  color: {{ settings.body_font_color }};
}

button,
input[type='submit'] {
  background: {{ settings.btn_background_color }};
  color: {{ settings.btn_color }};
  border: none;
}

input[type='text'],
input[type='email'],
input[type='tel'],
input[type='url'],
input[type='date'],
input[type='time'],
input[type='month'],
input[type='datetime'],
input[type='datetime-local'],
input[type='color'],
input[type='range'],
input[type='number'],
input[type='search'] {
  border: 1px solid {{ settings.input_border_color }};
}

h1,
h2,
h3,
h4,
h5,
h6 {
  color: {{ settings.headings_color }};
}

/* * * * * * * * */
/* Global styles */
/* * * * * * * * */

a.btn,
.btn {
  border-radius: 0;
  font-weight: 300;
  height: 45px;
  padding: 11px 0;
  font-size: 14px;
  letter-spacing: 1px;
  text-transform: uppercase;
  background: {{ settings.btn_background_color }};
  color: {{ settings.btn_color }};
}

a:hover.btn,
.btn:hover {
  background: {{ settings.btn_background_color_hover }};
  color: {{ settings.btn_color }};
  opacity: .85;
}

.btn-outline {
  background: none !important;
  border: 1px solid {{ settings.btn_background_color }};
  background: {{ settings.btn_background_color }} !important;
  color: {{ settings.btn_color }} !important;
}

.btn-select {
  background: none !important;
  border: 1px solid {{ settings.body_font_color }};
  color: {{ settings.body_font_color }} !important;
}

.btn-select:hover {
  background: {{ settings.btn_background_color }} !important;
  color: {{ settings.btn_color }} !important;
}

.no-gut {
  padding-right: 0;
  padding-left: 0;
}

.section-heading {
  position: relative;
  padding-bottom: 15px;
}

.section-heading:before {
  content: '';
  width: 50px;
  height: 2px;
  background: {{ settings.brand_main_color }};
  position: absolute;
  top: 100%;
  left: 0;
}

.clear-both {
  clear: both;
}

/* * * * * * * * * * */
/* Main menu styles  */
/* * * * * * * * * * */

#main-menu {
  background-color: {{ settings.main_menu_background_color }};
  border-color: {{ settings.main_menu_border_color }};
  height: 60px;
}

#main-menu .brand-logo {
  max-width: {{ settings.brand_logo_width }};
  height: auto;
}

#main-menu .brand-text {
  display: inline-block;
  padding-top: 4px;
}

#main-menu ul li a {
  color: {{ settings.main_menu_link_color }};
  text-transform: uppercase;
}

#main-menu ul li a:hover {
  color: {{ settings.main_menu_link_color_hover }};
}

#main-menu .navbar-left li a {
  font-size: 12px;
  padding: 20px 15px;
}

@media (max-width: 767px) {
  #main-menu .navbar-left li a {
    padding: 10px 15px;
  }
}

#main-menu .navbar-left li a:hover {
  font-weight: 600;
}

#main-menu .cart-notification {
  color: {{ settings.brand_main_color }};
}

.cart-item__image-container {
  width: 100px;
  height: 130px;
}

#main-menu .search-dropdown .dropdown-menu {
  width: 300px;
  padding: 5px; 
}

@media (max-width: 767px) {
  #main-menu .search-dropdown .dropdown-menu {
    width: 100%; 
  } 
}

#main-menu .search-dropdown .dropdown-menu form .form-group, #main-menu .search-dropdown .dropdown-menu form .input-group {
  width: 100%; 
}

#main-menu .search-dropdown .dropdown-menu form button {
  padding: 0 15px;
  height: 46px;
  border: 1px solid black; 
}

@media (max-width: 767px) {
  #main-menu-collapse {
    background-color: white;
    position: relative;
    z-index: 5;
    border-bottom: 1px solid #cecece;
  }
}

.navbar {
  margin-bottom: 0;
  border-radius: 0 !important;
  border: none;
  border-bottom: 1px solid;
}

/* * * * * * * * */
/* Footer styles */
/* * * * * * * * */

.footer {
  margin-top: 25px;
}

.footer .row {
  border-top: 1px solid #cecece;
}

.footer a,
.footer p {
