{% extends 'layout.twig' %}

{% block body %}

    {% include "_slider.twig" %}

    {% include "_featured-collections.twig" %}

    {% include "_featured-products.twig" %}

    {% include "_full-width.banner.twig" %}

    {% include "_front-blog-grid.twig" %}

{% endblock body %}

{% block body_js %}
    {{ parent() }}
    <script type="text/javascript">
        var timeOut;
        $(function() {
            $('.slick-slider-home').slick({
              dots: true,
              arrows: false,
              infinite: true,
              speed: 500,
              autoplay: true,
              autoplaySpeed: 5000
            });
        });

        $(window).load(function() {
          squareItem('.collection__item--square');
          if ( !isMobile() ) {
            rectangleItem('.collection__item--rectangle', '.collection__item--square');
          } else {
            squareItem('.collection__item--rectangle');
          }

        });

        $(window).resize(function() {
            clearTimeout(timeOut);
            timeOut = setTimeout(function(){
                squareItem('.collection__item--square');
                if ( !isMobile() ) {
                  rectangleItem('.collection__item--rectangle', '.collection__item--square');
                } else {
                  squareItem('.collection__item--rectangle');
                }
            }, 300);
        });
    </script>
{% endblock body_js %}
