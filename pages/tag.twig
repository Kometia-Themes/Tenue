{% extends 'layout.twig' %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2 class="section-heading">{{ tag.title }}</h2>
    </div>
  </div>
</div>

{% if posts | length > 0 %}
<div class="container">
  {% for post in posts %}
  <div class="row blog">
    <div class="col-xs-12 blog__item">
      <div class="row">
        <div class="col-xs-12 blog__item__img">
          <a class="blog__item__img__link" href="/blogs/{{ blog.permalink }}/posts/{{ post.permalink }}">
            {% if post.image_url %}
            <img src="{{ post.image_url }}?w=1180&h=500&fit=crop" alt="{{ post.name | escape  }}" class="img-responsive">
            {% else %}
            <img src="{{ 'transparent_1180_100.png' | asset_url }}" alt="{{ post.name | escape }}" class="img-responsive">
            {% endif %}
          </a>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1 blog__item__info">
          <h3 class="section-heading">{{ post.title | escape }}</h3>
          <p class="blog__item__excerpt">{{ post.summary }}</p>
          <a href="/blogs/{{ blog.permalink }}/posts/{{ post.permalink }}" class="blog-read-more">Leer m√°s</a>
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
{% else %}
<h4 class="text-uppercase text-center">
  No hay entradas relacionadas a la etiqueta.
</h4>
{% endif %}
{% endblock %}
