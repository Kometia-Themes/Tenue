{% extends 'layout.twig' %}

{% block main_title %}
    {{ page.title }}
{% endblock main_title %}

{% block meta_description %}
    {{ page.meta_description }}
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page__title section-heading">{{ page.title }}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 page__content">
                <p>{{ page.content | raw }}</p>
            </div>
        </div>
    </div>

{% endblock body %}
