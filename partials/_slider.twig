<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 no-gut">
            {% if settings.slide_1 or settings.slide_2 or settings.slide_3 or settings.slide_4 %}
                <div class="slick-slider-home {% if settings.slider_responsive %} slider-responsive {% endif %}">
                    {% for i in 1..3 %}
                        {% set slide = 'slide_'~i %}
                        {% if settings[slide] %}
                            {% set slide_btn = slide~'_btn' %}
                            {% set slide_btn_url = slide~'_btn_url' %}
                            {% set slide_btn_text = slide~'_btn_text' %}
                            {% set slide_image = slide~'_image' %}
                            {% set slide_title = slide~'_title' %}
                            {% set slide_desc = slide~'_desc' %}
                            {% if settings.slider_responsive %}
                                <div>
                                    <img src="{{ settings[slide_image] }}" class="img-responsive">
                                    {% if settings.slider_has_overlay %}
                                        <div class="slider_overlay"></div>
                                    {% endif %}
                                    <div class="slider_content row">
                                        <div class="col-sm-10 col-sm-offset-1">
                                            <h2 class="slider_title">{{ settings[slide_title] }}</h2>
                                            <p class="slider_desc">{{ settings[slide_desc] }}</p>
                                            {% if settings[slide_btn] %}
                                                <div class="row">
                                                    <div class="col-sm-4">
                                                        <a href="{{ settings[slide_btn_url] }}" class="slide_btn btn btn-block">{{ settings[slide_btn_text] }}</a>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div style="background-image: url('{{ settings[slide_image] }}?w=1280&h=550&fit=crop')">
                                    {% if settings.slider_has_overlay %}
                                        <div class="slider_overlay"></div>
                                    {% endif %}
                                    <div class="slider_content row">
                                        <div class="col-sm-10 col-sm-offset-1">
                                            <h2 class="slider_title">{{ settings[slide_title] }}</h2>
                                            <p class="slider_desc">{{ settings[slide_desc] }}</p>
                                            {% if settings[slide_btn] %}
                                                <div class="row">
                                                    <div class="col-sm-4">
                                                        <a href="{{ settings[slide_btn_url] }}" class="slide_btn btn btn-block">{{ settings[slide_btn_text] }}</a>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>