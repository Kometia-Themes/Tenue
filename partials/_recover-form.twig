<form action="/cuenta/recuperar" method="POST" role="form" class="login-form">
    <div class="row">
        <div class="col-x-12">
            <h4 class="text-center">Recuperar Contraseña</h4>
            <br/>
        </div>
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <div class="form-group">
                <div class="input-group input-group-lg">
                    <input type="email" class="form-control input-lg" id="email" name="email" placeholder="Correo electrónico" required>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <div class="form-group">
                <input class="btn btn-action btn-block" type="submit" name="submit" id="submit" value="&nbsp; Recuperar &nbsp;">
            </div>
        </div>
    </div>
</form>